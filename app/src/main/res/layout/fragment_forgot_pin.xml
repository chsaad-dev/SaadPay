<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/forgotPinFragmentRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/forgotPinTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot PIN"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/primaryColor"
            android:layout_marginBottom="24dp" />

        <EditText
            android:id="@+id/emailEditText"
            android:hint="Email"
            android:textColor="@color/black"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textColorHint="#888888"
            android:background="@drawable/bg_input_rounded_selector" />

        <EditText
            android:id="@+id/passwordEditText"
            android:hint="Password"
            android:textColor="@color/black"
            android:inputType="textPassword"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textColorHint="#888888"
            android:background="@drawable/bg_input_rounded_selector" />

        <EditText
            android:id="@+id/newPinEditText"
            android:hint="New PIN"
            android:textColor="@color/black"
            android:inputType="numberPassword"
            android:maxLength="4"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textColorHint="#888888"
            android:background="@drawable/bg_input_rounded_selector" />

        <EditText
            android:id="@+id/confirmPinEditText"
            android:hint="Confirm New PIN"
            android:textColor="@color/black"
            android:inputType="numberPassword"
            android:maxLength="4"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textColorHint="#888888"
            android:background="@drawable/bg_input_rounded_selector" />

        <Button
            android:id="@+id/resetPinBtn"
            android:text="Reset PIN"
            android:textAllCaps="false"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/primaryColor"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/myImage"
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_password_image"
            android:contentDescription="Secure PIN" />

    </LinearLayout>
</ScrollView>
