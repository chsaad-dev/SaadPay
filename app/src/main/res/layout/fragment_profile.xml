<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/profileRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Profile Image -->
        <ImageView
            android:id="@+id/profileImageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_person"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="12dp"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_profile_circle"
            android:padding="4dp" />

        <!-- Name -->
        <TextView
            android:id="@+id/profileNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SaadPay User"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <!-- Email -->
        <TextView
            android:id="@+id/profileEmailTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="saadpayuser@example.com"
            android:textSize="18sp"
            android:textColor="@color/primaryColor"
            android:layout_marginBottom="24dp" />

        <!-- Fingerprint Status -->
        <TextView
            android:id="@+id/fingerprintStatusTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fingerprint is enabled ✅"
            android:textSize="16sp"
            android:textColor="@color/gray"
            android:layout_marginBottom="8dp" />

        <!-- Biometric Switch Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="16dp"
            card_view:cardElevation="1dp"
            card_view:cardBackgroundColor="@color/white"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="6dp"
                android:gravity="center_vertical"
                android:layout_marginStart="12dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="👉 Enable Fingerprint"
                    android:textSize="17sp"
                    android:textColor="@color/black" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/biometricSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Change PIN -->
        <androidx.cardview.widget.CardView
            android:id="@+id/changePinCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            card_view:cardCornerRadius="16dp"
            card_view:cardElevation="1dp"
            card_view:cardBackgroundColor="@color/white">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🔐 Change PIN"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:padding="16dp" />
        </androidx.cardview.widget.CardView>

        <!-- Forgot PIN -->
        <androidx.cardview.widget.CardView
            android:id="@+id/forgotPinCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            card_view:cardCornerRadius="16dp"
            card_view:cardElevation="1dp"
            card_view:cardBackgroundColor="@color/white">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="❓ Forgot PIN"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:padding="16dp" />
        </androidx.cardview.widget.CardView>

        <!-- Logout -->
        <androidx.cardview.widget.CardView
            android:id="@+id/logoutCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="16dp"
            card_view:cardElevation="1dp"
            card_view:cardBackgroundColor="@color/red">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🚪 Logout"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:padding="16dp" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
