<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="12dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp"
    app:strokeColor="@color/white"
    app:strokeWidth="1dp"
    app:shapeAppearanceOverlay="@style/ShapeAppearance.SaadPay.Card">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_card_gradient"
        android:padding="24dp">

        <!-- Card Type -->
        <TextView
            android:id="@+id/cardType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Virtual Card"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="16sp" />

        <!-- Eye Icon -->
        <ImageView
            android:id="@+id/eyeIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_eye_closed"
            app:tint="@android:color/white" />

        <!-- Card Number -->
        <TextView
            android:id="@+id/cardNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardType"
            android:layout_marginTop="32dp"
            android:text="**** **** **** 1234"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:letterSpacing="0.1" />

        <!-- Cardholder Name -->
        <TextView
            android:id="@+id/cardUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardNumber"
            android:layout_marginTop="20dp"
            android:text="SAADPAY USER"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/white" />

        <!-- Expiry -->
        <TextView
            android:id="@+id/cardExpiry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardUserName"
            android:layout_alignParentStart="true"
            android:layout_marginTop="12dp"
            android:text="12/28"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <!-- CVV -->
        <TextView
            android:id="@+id/cardCvv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/cardExpiry"
            android:layout_alignParentEnd="true"
            android:text="***"
            android:textColor="@android:color/white"
            android:textSize="14sp" />
    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>
